rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Transactions collection - users can only access their own data
    match /transactions/{transactionId} {
      // Allow read if user is authenticated and owns the document
      allow read: if request.auth != null 
                  && resource.data.createdBy == request.auth.uid;
      
      // Allow create if user is authenticated and setting themselves as owner
      allow create: if request.auth != null 
                    && request.resource.data.createdBy == request.auth.uid
                    && request.resource.data.keys().hasAll(['title', 'category', 'amount', 'isIncome', 'campusLocation', 'date', 'createdBy', 'createdAt']);
      
      // Allow update if user is authenticated and owns the document
      // and cannot change the createdBy field
      allow update: if request.auth != null 
                    && resource.data.createdBy == request.auth.uid
                    && request.resource.data.createdBy == resource.data.createdBy;
      
      // Allow delete if user is authenticated and owns the document
      allow delete: if request.auth != null 
                    && resource.data.createdBy == request.auth.uid;
    }
    
    // User profiles collection (optional - for future use)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User settings collection - users can only access their own settings
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Goals collection - users can only access their own goals
    match /goals/{goalId} {
      // Allow read if user is authenticated and owns the goal
      allow read: if request.auth != null 
                  && resource.data.createdBy == request.auth.uid;
      
      // Allow create if user is authenticated and setting themselves as owner
      allow create: if request.auth != null 
                    && request.resource.data.createdBy == request.auth.uid
                    && request.resource.data.keys().hasAll(['title', 'current', 'target', 'createdBy', 'createdAt']);
      
      // Allow update if user is authenticated and owns the goal
      allow update: if request.auth != null 
                    && resource.data.createdBy == request.auth.uid
                    && request.resource.data.createdBy == resource.data.createdBy;
      
      // Allow delete if user is authenticated and owns the goal
      allow delete: if request.auth != null 
                    && resource.data.createdBy == request.auth.uid;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}


